@using Neosinerji.BABOnlineTP.Web.Content.Lang
@using Neosinerji.BABOnlineTP.Web.Areas.GorevTakip.Models
@model  AtananIsDokumanlarListModel

<script>
    $(document).ready(function () {
        var dokumanTable;
        function dokumanTableSet() {
            dokumanTable = $('#dokuman-table').dataTable({
                "bPaginate": true,
                "bLengthChange": false,
                "iDisplayLength": 5,
                "bFilter": false,
                "bInfo": false,
                "bAutoWidth": false,
                "sPaginationType": "full_numbers",
                "sPaginationType": "bootstrap"
            });
        }
        dokumanTableSet();
    });
</script>
<table id="dokumanlar-table" class="table table-striped table-bordered table-hover dataTable data-table">
    <thead>
        <tr>
            <th style="text-align:center; width:5%;">@babonline.Name</th>
            <th style="text-align:center; width:5%;">@babonline.Add_Date</th>
            <th style="text-align:center; width:5%;">@babonline.Added_User </th>

            @if (Model.sayfaAdi == "guncelle")
    {
        <th style="width: 4%;">&nbsp;</th>
}
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
        <tr>
            <td style="text-align:center">@item.DokumanAdi</td>
            <td style="text-align:center">@item.EklemeTarihi.ToString("dd.MM.yyyy")</td>
            <td style="text-align:center">@item.EkleyenPersonelAdi</td>
            @if (Model.sayfaAdi == "guncelle")
    {
        <td>
            <div class="btn-group">
                <a href="#" onclick="window.open('@item.DokumanURL');return false;" id="indir" class="btn btn-mini btn-success">@babonline.Download</a>
                <a href="javascript:void(0)" is-id="@item.IsId" dokuman-kodu="@item.SiraNo" class="btn btn-mini btn-danger delete-dokuman">@babonline.Delete</a>
            </div>
        </td>
}
        </tr>
        }
    </tbody>
</table>

