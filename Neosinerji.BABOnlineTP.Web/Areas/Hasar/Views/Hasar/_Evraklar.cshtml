@using Neosinerji.BABOnlineTP.Web.Content.Lang
@using Neosinerji.BABOnlineTP.Web.Areas.Hasar.Models
@model HasarZorunluEvrakListModel

<script>
    $(document).ready(function () {
        var evrakTable;
        function notTableSet() {
            evrakTable = $('#evraklar-table').dataTable({
                "bPaginate": true,
                "bLengthChange": false,
                "iDisplayLength": 5,
                "bFilter": false,
                "bInfo": false,
                "bAutoWidth": false,
                "sPaginationType": "full_numbers",
                "sPaginationType": "bootstrap"
            });
        }

        notTableSet();
    });
</script>

<table id="evraklar-table" class="table table-bordered table-striped responsive data-table">
    <thead>
        <tr>
            <th style="width: 50px;">Evrak Sıra Numarası</th>
            <th style="width: 150px;">Evrak Adı</th>
            <th style="width: 50px;">@babonline.Add_Date</th>
            <th style="width: 50px;">&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td style="text-align: center; width: 50px;">@item.EvrakId</td>
                <td style="text-align: center; width: 150px;">@item.EvrakAdi</td>
                <td style="text-align: center; width: 50px;">@item.EvrakKayitTarihi.ToShortDateString()</td>
                <td style="text-align: center; width: 50px;">
                    <div class="btn-group">
                        <a href="#" onclick="window.open('@item.Evrak');return false;" id="indir" class="btn btn-mini btn-success">@babonline.Download</a>
                        <a href="javascript:void(0)" evrak-id="@item.EvrakId" class="btn btn-mini btn-danger delete-evrak">@babonline.Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
