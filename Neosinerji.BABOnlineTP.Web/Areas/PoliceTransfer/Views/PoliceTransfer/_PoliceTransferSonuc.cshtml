@using Neosinerji.BABOnlineTP.Web.Content.Lang
@using Neosinerji.BABOnlineTP.Web.Areas.PoliceTransfer.Models
@model PoliceTranferKayitModel

<div id="pol-transfer-sonuc" class="modal hide fade" data-backdrop="static" data-keyboard="false">

    <div class="modal-header">
        <h3>Poliçe Transfer Raporu</h3>
    </div>
    <div class="modal-body">
        <form id="policeTransferSonucForm" method="post" class="form-horizontal">
            <div class="row-fluid">               
                    <div class="span12">
                        <div class="control-group">
                            <label class="control-label">Başarılı Transfer Edilen Kayıt Sayısı</label>
                            <div class="controls">
                                <span>@Model.basariliKayitlar</span>
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">Daha Önceden Transfer Edilen Kayıt Sayısı</label>
                            <div class="controls">
                                <span>@Model.basarisizKayitlar</span>
                            </div>
                        </div>

                        <div class="control-group">
                            <label class="control-label">Transfer Edilmeyen Hatalı Kayıt Sayısı</label>
                            <div class="controls">
                                <span>@Model.HataliEklenmeyenPoliceSayisi</span>
                            </div>
                        </div>
                    </div>
              
                @if (Model.HataliEklenmeyenPoliceLsitesi != null && Model.HataliEklenmeyenPoliceLsitesi.Count > 0)
                {
                    <div class="span12">
                        <h4 style="color:#0d638f;">Transfer Edilmeyen Hatalı Kayıt </h4>
                        <div class="span6">
                            <span style="color:#0d638f;">Poliçe / Zeyl / Yenileme No </span>
                        </div>
                        <div class="span3">
                            <span style="color:#0d638f;">Hata Tipi</span>
                        </div>
                    </div>
                    foreach (var item in Model.HataliEklenmeyenPoliceLsitesi)
                    {
                        <div class="span12">
                            <div class="span6">
                                <label>@item.PoliceNo / @item.EkNo / @item.YenilemeNo  </label>
                            </div>

                            <div class="span3">
                                <label style="color:red;">@item.Hatatip</label>
                            </div>
                        </div>
                    }
                }
            </div>
        </form>
    </div>
    <div class="modal-footer">
        <a href="#" class="btn" data-dismiss="modal" aria-hidden="true">@babonline.Close</a>
    </div>
</div>
