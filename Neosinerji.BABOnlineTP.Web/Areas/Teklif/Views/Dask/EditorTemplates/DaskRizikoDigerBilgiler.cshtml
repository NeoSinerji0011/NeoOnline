<div class="row-fluid">
    <div class="span6">
        <div class="control-group">
            <label class="control-label">@babonline.IsThereInsureMoreThanOne</label>
            <div class="controls">
                @Html.SwitchButtonFor(s => s.TapudaBirdenFazlaSigortaliVarmi, new string[] { "EVET", "HAYIR" }, new { })
            </div>
        </div>

        <div class="sigortali-container" style="display: none">
            <div id="alert" class="alert fade in" style="">
                <strong>@babonline.Warning</strong>@babonline.InsureWarningText
            </div>
            <div style="display: block; text-align: right; margin-bottom: 10px; margin-top: -10px">
                <a href="#" id="btn-ekle" class="btn green icn-only"><i class="icon-user icon-white"></i></a>
                <a href="#" id="btn-cikar" class="btn red icn-only"><i class="icon-remove icon-white"></i></a>
            </div>
            <div>
                @for (int i = 0; i < Model.SigortaliList.Count; i++)
                {
                    <div class="control-group sigortali-element" id="sigortali_@i" style="display:none">
                        <label class="control-label">Sigortalı Ad Soyad</label>
                        <div class="controls">
                            @Html.TextBoxFor(s => Model.SigortaliList[i], new { style = "width:90%", @class = "sigortali-inputs" })
                        </div>
                    </div>    
                }
            </div>
        </div>
    </div>
</div>
