@using Neosinerji.BABOnlineTP.Web.Content.Lang;
@model Neosinerji.BABOnlineTP.Web.Areas.Teklif.Models.KonutRizikoDigerBilgiler


<div class="row-fluid">
    <div class="span6">
        <div class="control-group">
            <label class="control-label">@babonline.MunicipalCode<span class="required">*</span></label>
            <div class="controls">
                @Html.DropDownListFor(m => m.BelediyeKodu, Model.Belediyeler)
                @Html.ValidationMessageFor(s => s.BelediyeKodu)
            </div>
        </div>
    </div>
    <div class="span6">
        <div class="control-group">
            <label class="control-label">@babonline.IsTheDoor</label>
            <div class="controls">

                @Html.SwitchButtonFor(m => m.CelikKapiVarMi, new string[] { "EVET", "HAYIR" }, new { })
            </div>
        </div>
    </div>
</div>

<div class="row-fluid">
    <div class="span6">
        <div class="control-group">
            <label class="control-label">@babonline.BuildingStyle<span class="required">*</span></label>
            <div class="controls">
                @Html.DropDownListFor(m => m.YapiTarzi, Model.YapiTarzlari, new { tabindex = 18, style = "width:90%" })
                @Html.ValidationMessageFor(s => s.YapiTarzi)
            </div>
        </div>
    </div>
    <div class="span6">
        <div class="control-group">
            <label class="control-label">@babonline.IsIronFence</label>
            <div class="controls">
                @Html.SwitchButtonFor(m => m.DemirParmaklikVarMi, new string[] { "EVET", "HAYIR" }, new { })
            </div>
        </div>
    </div>
</div>


<div class="row-fluid">
    <div class="span6">
        <div class="control-group">
            <label class="control-label">@babonline.IdleTime</label>
            <div class="controls">
                @Html.DropDownListFor(m => m.BosKalmaSuresi, Model.BosKalmaSureleri, new { tabindex = 18, style = "width:90%" })
                @Html.ValidationMessageFor(s => s.BosKalmaSuresi)
            </div>
        </div>
    </div>
    <div class="span6">
        <div class="control-group">
            <label class="control-label">@babonline.PrivateSecurityAlarmExist</label>
            <div class="controls">
                @Html.SwitchButtonFor(m => m.OzelGuvenlikAlarmVarMi, new string[] { "EVET", "HAYIR" }, new { })
            </div>
        </div>
    </div>
</div>

<div class="row-fluid">
    <div class="span6">
        <div class="control-group">
            <label class="control-label">@babonline.InflationRatio</label>
            <div class="controls">
                <div class="input-append">
                    @Html.TextBoxFor(m => m.EnflasyonOrani, new { @class = "m-wrap onlynumbers", enabled = "enabled", style = "width:90px; text-align:right; " })<span class="add-on">%</span>
                </div>
                @Html.ValidationMessageFor(s => s.EnflasyonOrani)
            </div>
        </div>
    </div>
    <div class="span6">
        <div class="control-group">
            <label class="control-label">@babonline.Is_WinterWeight</label>
            <div class="controls">
                @Html.SwitchButtonFor(m => m.KislikMi, new string[] { "EVET", "HAYIR" }, new { })
            </div>
        </div>
    </div>
</div>

<div class="row-fluid">
    <div class="span6">
        <div class="control-group">
            <label class="control-label">@babonline.NoClaimDiscountRate</label>
            <div class="controls">
                <div class="input-append">
                    @Html.TextBoxFor(s => s.HasarsizlikIndirimOrani, new { @class = "m-wrap onlynumbers", enabled = "enabled", style = "width:90px; text-align:right; " })<span class="add-on">%</span>
                </div>
                @Html.ValidationMessageFor(s => s.HasarsizlikIndirimOrani)
            </div>
        </div>
    </div>
    <div class="span6">
        <div class="control-group">
            <label class="control-label">@babonline.FlatGrossFloorArea<span class="required">*</span></label>
            <div class="controls">
                <div class="input-append">
                    @Html.TextBoxFor(s => s.DaireBrutYuzOlcumu, new { @class = "m-wrap onlynumbers", enabled = "enabled", style = "width:90px; text-align:right; " })<span class="add-on">m2</span>
                </div>
                @Html.ValidationMessageFor(s => s.DaireBrutYuzOlcumu)
            </div>
        </div>
    </div>
</div>

<div class="row-fluid">
    <div class="span6">
        <div class="control-group">
            <label class="control-label">@babonline.AnnualRateOfInflationProtection</label>
            <div class="controls">
                <div class="input-append">
                    @Html.TextBoxFor(s => s.YillikEnflasyonKorumaOrani, new { @class = "m-wrap onlynumbers", enabled = "enabled", style = "width:90px; text-align:right; " })<span class="add-on">%</span>
                </div>
                @Html.ValidationMessageFor(s => s.YillikEnflasyonKorumaOrani)
            </div>
        </div>
    </div>
    <div class="span6">
        <div class="control-group">
            <label class="control-label">@babonline.WhatFloorIsInsuredIn<span class="required">*</span></label>
            <div class="controls">
                <div class="input-append">
                    @Html.TextBoxFor(s => s.SigortalanacakYerKacinciKatta, new { @class = "m-wrap onlynumbers", enabled = "enabled", style = "width:90px; text-align:right; " })<span class="add-on">.K</span>
                    @Html.ValidationMessageFor(s => s.SigortalanacakYerKacinciKatta)
                </div>
            </div>
        </div>
    </div>
</div>
