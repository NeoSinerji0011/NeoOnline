<div id="kk-odeme" class="modal hide fade" data-backdrop="static" data-keyboard="false">
    <div class="modal-header">
        <h3>@babonline.Pay</h3>
    </div>
    <div class="modal-body">
        <form id="krediKartiForm" method="post" class="form-horizontal">
            <div class="row-fluid">
                <div class="span12">
                    <div class="control-group">
                        <label class="control-label">@babonline.Amount</label>
                        <div class="controls">
                            <strong id="kk-tutar" style="align-content:center">15.0</strong>
                        </div>
                    </div>
                </div>
            </div>

            <div id="kredi-kart-bilgi">
                <div class="row-fluid kk-class">
                    <div class="span12">
                        <div class="control-group">
                            <label class="control-label">Kredi Kartı Sahibi Adı</label>
                            <div class="controls">
                                <input type="text" id="creditCardHolderFirstName" maxlength="50" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row-fluid kk-class">
                    <div class="span12">
                        <div class="control-group">
                            <label class="control-label">Kredi Kartı Sahibi Soyadı</label>
                            <div class="controls">
                                <input type="text" id="creditCardHolderLastName" maxlength="50" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row-fluid kk-class">
                    <div class="span12">
                        <div class="control-group">
                            <label class="control-label">@babonline.CreditCard_Number</label>
                            <div class="controls">
                                <input type="tel" id="creditCardNumber" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row-fluid kk-class">
                    <div class="span12">
                        <div class="control-group">
                            <label class="control-label">@babonline.SecurityCode</label>
                            <div class="controls">
                                <input type="text" id="creditCardCVVCode" class="NumbersValue" maxlength="3" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row-fluid kk-class">
                    <div class="span12">
                        <div class="control-group">
                            <label class="control-label">@babonline.ExpirationDate</label>
                            <div class="controls">
                                <select id="creditCardMonth">
                                    <option>01</option>
                                    <option>02</option>
                                    <option>03</option>
                                    <option>04</option>
                                    <option>05</option>
                                    <option>06</option>
                                    <option>07</option>
                                    <option>08</option>
                                    <option>09</option>
                                    <option>10</option>
                                    <option>11</option>
                                    <option>12</option>
                                </select>
                                <select id="creditCardYear">
                                    <option>2019</option>
                                    <option>2020</option>
                                    <option>2021</option>
                                    <option>2022</option>
                                    <option>2023</option>
                                    <option>2024</option>
                                    <option>2025</option>
                                    <option>2026</option>
                                    <option>2027</option>
                                    <option>2028</option>
                                    <option>2029</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="span12">
                        <div style="margin-bottom: 0;" class="alert alert-info">
                            <strong>@babonline.Info! </strong>@babonline.Credit_Card_Info
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <div class="modal-footer">
        <a id="kk-odeme-cancel" href="#" class="btn" data-dismiss="modal" aria-hidden="true">@babonline.Cancel</a>
        <a id="kk-odeme-confirm" href="#" class="btn btn-danger" data-dismiss="modal" data-loading-text="@babonline.Message_CreatingPolicy">@babonline.IApprove</a>
    </div>
</div>

