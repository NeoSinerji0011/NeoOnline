@using Neosinerji.BABOnlineTP.Web.Content.Lang;
@model Neosinerji.BABOnlineTP.Web.Areas.Teklif.Models.IsYeriRizikoDigerBilgiler



<div class="row-fluid">
    <div class="span6">
        <div class="control-group">
            <label class="control-label">@babonline.MunicipalCode<span class="required">*</span></label>
            <div class="controls">
                @Html.DropDownListFor(m => m.BelediyeKodu, Model.belediyeler)
                @Html.ValidationMessageFor(s => s.BelediyeKodu)
            </div>
        </div>
    </div>
    <div class="span6">
        <div class="control-group">
            <label class="control-label">@babonline.InflationRatio</label>
            <div class="controls">
                <div class="input-append">
                    @Html.TextBoxFor(m => m.EnflasyonOrani, new { @class = "m-wrap onlynumbers", enabled = "enabled", style = "width:90px; text-align:right; " })<span class="add-on">%</span>
                </div>
                @Html.ValidationMessageFor(s => s.EnflasyonOrani)
            </div>
        </div>
    </div>
</div>

<div class="row-fluid">
    <div class="span6">
