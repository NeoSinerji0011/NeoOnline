@using Neosinerji.BABOnlineTP.Web.Content.Lang
@model Neosinerji.BABOnlineTP.Web.Areas.Teklif.Models.KorunanGelecekAnaTeminatlar


<div class="row-fluid">
    <div class="span6">
        <div class="control-group">
            <label class="control-label">@babonline.Death
                <i class="icon-info-sign tooltips" data-container="body" data-placement="bottom" data-original-title="Örnek Format : 1,500.20"></i><span class="required">*</span>
            </label>
            <div class="controls">
                @Html.SwitchButtonFor(m => m.Vefat, new string[] { "EVET", "HAYIR" }, new { @class = "switcher switcher-small" })
                <div class="input-append tutar" id="vefat">
                    @Html.TextBoxFor(m => m.VefatBedeli, new { @class = "m-wrap autoNumeric-custom", placeholder = "1,500.20", style = "width:90px; text-align:right", data_val_number = "Örnek format : 1,500.20" })<span class="add-on ParaBirimi"></span>
                </div>
            </div>
        </div>
    </div>
</div>
