@using Neosinerji.BABOnlineTP.Web.Content.Lang
@using Neosinerji.BABOnlineTP.Web.Areas.Teklif.Models;
@model MapfreTeklifDurumModel

@Html.Hidden("Otorizasyon_TeklifId", Model.teklif.Fiyat1_TeklifId)
<div class="row-fluid">
    <div class="span4">
        <h4>@babonline.Proposal_No</h4>
    </div>
    <div class="span8">
        <h4>@Model.teklifNo</h4>
    </div>
</div>
<div class="row-fluid">
    <div class="span4">
        <h4>Mapfre @babonline.Proposal_No</h4>
    </div>
    <div class="span8">
        <h4>@Model.teklif.MapfreTeklifNo</h4>
    </div>
</div>
<div class="row-fluid">
    <div class="span4">
        <h4>@babonline.Gross_Premium</h4>
    </div>
    <div class="span8">
        <h4>@Model.teklif.Fiyat1</h4>
    </div>
</div>
<div class="row-fluid" style="margin-top:6px; padding-bottom:6px;">
    <div class="span12">
        <div class="alert alert-danger">
            <h4>Otorizasyon Mesajları</h4>
            @if(Model.teklif.OtorizasyonMesajlari != null)
            {
                foreach (var item in Model.teklif.OtorizasyonMesajlari)
	            {
		            <p>@item</p>
	            }
            }
            else
            {
                <p>Otorizasyon mesajı bulunamadı.</p>
            }
        </div>
    </div>
</div>
<div class="row-fluid">
    <div class="span12">
        <button type="button" class="btn green pull-right" id="otor-sorgula" data-loading-text="Sorgulanıyor...">
            <i class="icon-white icon-refresh"></i> Otorizasyon Sorgula
        </button>
@*        <button id="btn-teklif-tekrar1" class="btn btn-warning pull-right" data-teklif-id="@Model.teklifId" data-musteri-kodu="@Model.SigortaEttirenKodu" type="button" style="margin-right:10px;">
            <i class="icon-star-empty icon-white"></i>&nbsp;@babonline.RepeatProposal
        </button>*@
    </div>
</div>
<div class="row-fluid" id="otor-mesajlar" style="display:none;">
    <div style="margin: 20px auto; width: 500px;">
        <img src="/Content/img/loading9.gif" width="32" height="32" />
    </div>
</div>

