@using Neosinerji.BABOnlineTP.Web.Content.Lang
@model Neosinerji.BABOnlineTP.Web.Areas.Teklif.Models.OdemeGuvenceGenelBilgiler


@Html.HiddenFor(s => s.IssizlikDPM_FaydalanabilecekDurumdami)

<div class="row-fluid">
    <div class="span6">
        <div class="control-group">
            <label class="control-label">@babonline.Insurance_Start_Date<span class="required">*</span></label>
            <div class="controls">
                @Html.DateTextBoxFor(s => s.SigortaBaslangicTarihi, new { })
                @Html.ValidationMessageFor(s => s.SigortaBaslangicTarihi)
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">@babonline.Premium_Payment_Period<span class="required">*</span></label>
            <div class="controls">
                @Html.DropDownListFor(s => s.primOdemeDonemi, Model.primOdemeDonemiList, new { style = "width:90%" })
                @Html.ValidationMessageFor(s => s.primOdemeDonemi)
            </div>
        </div>
    </div>
</div>

<h4>Ek Teminatlar</h4>

<div class="row-fluid">
    <div class="span6">
        <label class="span" style="color: #0D638F">Kritik Hastalıklar Durumunda Prim Muafiyeti Teminatı </label>
    </div>
    <div class="span6">
        @Html.SwitchButtonFor(s => s.KritikHastalikDPM, new string[] { "EVET", "HAYIR" }, new { @class = "switcher switcher-small" })
    </div>
</div>

<div class="row-fluid">
    <div class="span6">
        <label class="span" style="color: #0D638F">Tam ve Daimi Maluliyet Durumunda Prim Muafiyeti Teminatı  </label>
    </div>
    <div class="span6">
        @Html.SwitchButtonFor(s => s.TamVeTaimiMaluliyetDPM, new string[] { "EVET", "HAYIR" }, new { @class = "switcher switcher-small" })
    </div>
</div>

<div class="row-fluid">
    <div class="span6">
        <label class="span" style="color: #0D638F">İşsizlik Durumunda Prim Muafiyeti Teminatı</label>
    </div>
    <div class="span6">
        @Html.SwitchButtonFor(s => s.IssizlikDPM, new string[] { "EVET", "HAYIR" }, new { @class = "switcher switcher-small" })
    </div>
</div>

<div class="row-fluid">
    <div class="span6">
        <label class="span" style="color: #0D638F">Kaza Sonucu Hastanede Yatarak Tedavi Durumunda Prim Muafiyeti Teminatı </label>
    </div>
    <div class="span6">
        @Html.SwitchButtonFor(s => s.KazaSonucuHastanedeyatarakTDPM, new string[] { "EVET", "HAYIR" }, new { @class = "switcher switcher-small" })
    </div>
</div>










