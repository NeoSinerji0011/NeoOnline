@using Neosinerji.BABOnlineTP.Web.Content.Lang
@using Neosinerji.BABOnlineTP.Business.Common

@{
    var logoUrl = ViewBag.Logo;
    var lang = System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName;
    var projekodu = ViewBag.ProjeKodu;
}


<!DOCTYPE html>
<!--[if IE 8]> <html lang="en" class="ie8"> <![endif]-->
<!--[if IE 9]> <html lang="en" class="ie9"> <![endif]-->
<html>
<head>
    <meta charset="utf-8" />
    <title>NeoOnline</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta content="neosinerji" name="author" />

    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/bootstrap-responsive.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/font-awesome.min.css" rel="stylesheet" type="text/css" />

    <link href="~/Content/css/style-metro.css?v=1" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/style.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/style-responsive.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/themes/ram_sigorta.css" rel="stylesheet" type="text/css" id="style_color" />
    <link href="~/Content/css/uniform.default.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/custom.css" rel="stylesheet" />
    <link href="~/Content/css/DT_bootstrap.css" rel="stylesheet" />
    <link rel="shortcut icon" href="@Url.Content("~/favicon.ico")" />
    <link href="~/Content/css/teklif-custom.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/css/jquery.smoothness.css" />
    <link href="~/Content/css/font-awosome.3.2.css" rel="stylesheet" /> <!--Menü iconları için yeni css-->

    <!-- BEGIN CORE PLUGINS -->
    <script src="~/Content/js/jquery-1.10.1.min.js" type="text/javascript"></script>
    <script src="~/Content/js/jquery-migrate-1.2.1.min.js" type="text/javascript"></script>
    <!-- END CORE PLUGINS -->

    @if (projekodu == TVMProjeKodlari.Aegon)
    {
        <link href="@Url.Content("~/Content/css/themes/aegon.css")" type="text/css" rel="stylesheet" />
    }

    @RenderSection("PageStyles", required: false)
</head>
<body class="fixed-top">
    <div class="header navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container-fluid">
                <a class="brand" style="text-align: center" >
                    <img src="@logoUrl" alt="TVM Logo"  class="tooltips tvm-logo" data-placement="bottom" height="39px" style="height:39px; margin-top: -8px; margin-right: -13px;"/>
                </a>
                <div class="navbar hor-menu">
                    <div class="navbar-inner">
                        @RenderSection("HorizontalMenu", required: true)
                    </div>
                </div>

                <a href="javascript:;" class="btn-navbar collapsed" data-toggle="collapse" data-target=".nav-collapse">
                    <img src="/content/img/menu-toggler.png" alt="" />
                </a>

                @*@Html.Partial("_UserMenu")*@
            </div>
        </div>
    </div>

    <div id="page-container" class="page-container row-fluid">
        <div class="page-content no-min-height">
            <div class="container-fluid">
                <div class="row-fluid">
                    <div class="span12">

                        @RenderSection("PageHeader", required: true)
                    </div>
                </div>

                @RenderBody()
            </div>
        </div>
    </div>
    <div class="footer">
        2018 &copy; Neosinerji / NeoOnline 
      <div class="span pull-right">
          <span class="go-top"><i class="icon-angle-up"></i></span>
      </div>
    </div>

    <!-- IMPORTANT! Load jquery-ui-1.10.1.custom.min.js before bootstrap.min.js to fix bootstrap tooltip conflict with jquery ui tooltip -->
    <script src="~/Content/js/jquery-ui.js" type="text/javascript"></script>
    <script src="~/content/js/bootstrap.js" type="text/javascript"></script>
    <script src="~/Content/js/twitter-bootstrap-hover-dropdown.min.js" type="text/javascript"></script>
    <!--[if lt IE 9]>
	<script src="~/Content/js/excanvas.min.js"></script>
	<script src="~/Content/js/respond.min.js"></script>  
	<![endif]-->
    <script src="~/content/js/jquery.slimscroll.min.js" type="text/javascript"></script>
    <script src="~/content/js/jquery.blockui.js" type="text/javascript"></script>
    <script src="~/content/js/jquery.cookie.js" type="text/javascript"></script>

    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <script src="~/Content/js/breakpoints.js" type="text/javascript"></script>
    <script src="~/Content/js/jquery.dataTables.js" type="text/javascript"></script>
    <script src="~/Content/js/jquery.validate.js" type="text/javascript"></script>
    <script src="~/Content/js/jquery.validate.bootstrap.js" type="text/javascript"></script>
    <script src="~/Content/js/jquery.validate.unobtrusive.js" type="text/javascript"></script>
    <script src="~/Content/js/jquery.validate.custom.js" type="text/javascript"></script>
    <script src="~/Content/js/jquery.gritter.min.js" type="text/javascript"></script>
    @if(projekodu != TVMProjeKodlari.Mapfre)
    {
        <script src="~/Content/js/skype-uri.js" type="text/javascript"></script>
    }
    <script src="~/Content/js/jquery.alphanumeric.pack.js" type="text/javascript"></script>
    <!-- END PAGE LEVEL PLUGINS -->
    <!-- BEGIN PAGE LEVEL SCRIPTS -->
    <script src="~/content/js/app.js" type="text/javascript"></script>
    <!-- END PAGE LEVEL SCRIPTS -->



    <script src="@Url.Content("~/Content/js/jquery.bootstrap.wizard.js")" type="text/javascript"></script>



    @if (projekodu == TVMProjeKodlari.Aegon)
    {
        <script src="@Url.Content("~/Content/js/Aegon/aegon.form.wizard.js")" type="text/javascript"></script>
        <link href="~/Content/css/style.aegon.css" rel="stylesheet" />
    }
    else
    {<script src="@Url.Content("~/Content/js/form-wizard.js")" type="text/javascript"></script>}


    <script src="@Url.Content("~/Content/js/jquery.inputmask.bundle.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/js/chosen.jquery.min.js")" type="text/javascript"></script>


    @Scripts.Render("~/bundles/phoneinputjs")
    @if (lang == "en")
    {     @Scripts.Render("~/bundles/dataTableen")
        <script src="~/Content/js/neosinerji.babonlinetp.common.en.js?v=1"></script>
        <script src="@Url.Content("~/Content/js/customlang.en.js")" type="text/javascript"></script>
    }
    else
    {    @Scripts.Render("~/bundles/dataTable")
        <script src="~/Content/js/neosinerji.babonlinetp.common.js?v=1"></script>
        <script src="@Url.Content("~/Content/js/customlang.tr.js")" type="text/javascript"></script>
    }

    <script>
        jQuery(document).ready(function () {
            App.init();
        });
    </script>
    @RenderSection("PageScripts", required: false)
<script>
    (function (i, s, o, g, r, a, m) {
        i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
            (i[r].q = i[r].q || []).push(arguments)
        }, i[r].l = 1 * new Date(); a = s.createElement(o),
        m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
    })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

    ga('create', 'UA-77351630-1', 'auto');
    ga('send', 'pageview');
</script>
</body>
</html>

