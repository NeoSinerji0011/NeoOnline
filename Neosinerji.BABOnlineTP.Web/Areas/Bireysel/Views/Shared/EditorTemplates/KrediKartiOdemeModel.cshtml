@using Neosinerji.BABOnlineTP.Web.Content.Lang
@using Neosinerji.BABOnlineTP.Web.Areas.Teklif.Models
@model KrediKartiOdemeModel

<div id="kk-odeme" class="modal hide fade" data-backdrop="static" data-keyboard="false">
    <div class="modal-header">
        <h3>@babonline.Pay</h3>
    </div>
    <div class="modal-body">
        <form id="krediKartiForm" method="post" class="form-horizontal">
            @Html.HiddenFor(f => f.KK_TeklifId)
            <div class="row-fluid">
                <div class="span12">
                    <div class="control-group">
                        <label class="control-label">@babonline.PaymentType</label>
                        <div class="controls">
                            <div class="btn-group" data-toggle="buttons-radio">
                                @Html.RadioButtonListFor(s => s.KK_OdemeTipi, Model.OdemeTipleri)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <div class="control-group">
                        <label class="control-label">@babonline.PaymentStyle</label>
                        <div class="controls">
                            <div class="btn-group" data-toggle="buttons-radio">
                                @Html.RadioButtonListFor(s => s.KK_OdemeSekli, Model.OdemeSekilleri)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row-fluid" id="taksit-sayisi">
                <div class="span12">
                    <div class="control-group">
                        <label class="control-label">@babonline.HirePurchaseCount</label>
                        <div class="controls" style="width: 100px;">
                            @Html.DropDownListFor(m => m.TaksitSayisi, Model.TaksitSayilari, new { @class = "input-small" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <div class="control-group">
                        <label class="control-label">@babonline.Amount</label>
                        <div class="controls">
                            <strong id="kk-tutar"></strong>
                        </div>
                    </div>
                </div>
            </div>
             <div class="row-fluid" id="nakit-error" style="display: none;">
                    <div class="span12">
                        <div class="alert alert-error">
                            <strong>@babonline.ErrorPolicyCreate</strong><br />
                            <div id="nakit-error-list">
                            </div>
                        </div>
                    </div>
                </div>

            <div id="kredi-kart-bilgi">
                <div class="row-fluid kk-class">
                    <div class="span12">
                        <div class="control-group">
                            <label class="control-label">@babonline.CreditCard_Holder</label>
                            <div class="controls">
                                @Html.TextBoxFor(s => s.KartSahibi, new { maxlength = "50", style = "width:193px;" })
                                @Html.ValidationMessageFor(s => s.KartSahibi)
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row-fluid kk-class">
                    <div class="span12">
                        <div class="control-group">
                            <label class="control-label">@babonline.CreditCard_Number</label>
                            <div class="controls">
                                @Html.EditorFor(s => s.KartNumarasi)
                                @Html.ValidationMessageFor(s => s.KartNumarasi)
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row-fluid kk-class">
                    <div class="span12">
                        <div class="control-group">
                            <label class="control-label">@babonline.SecurityCode</label>
                            <div class="controls">
                                @Html.TextBoxFor(s => s.GuvenlikNumarasi, new { maxlength = "3", data_format = "ddd", @class = "input-medium bfh-phone", style = "width:35px;" })
                                @Html.ValidationMessageFor(s => s.GuvenlikNumarasi)
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row-fluid kk-class">
                    <div class="span12">
                        <div class="control-group">
                            <label class="control-label">@babonline.ExpirationDate</label>
                            <div class="controls">
                                @Html.DropDownListFor(s => s.SonKullanmaAy, Model.Aylar, new { style = "width:60px !important;" })
                                @Html.ValidationMessageFor(s => s.SonKullanmaAy)
                                @Html.DropDownListFor(s => s.SonKullanmaYil, Model.Yillar, new { style = "width:75px !important;" })
                                @Html.ValidationMessageFor(s => s.SonKullanmaYil)
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row-fluid" id="kredi-karti-error" style="display: none;">
                    <div class="span12">
                        <div class="alert alert-error">
                            <strong>@babonline.ErrorPolicyCreate</strong><br />
                            <div id="kredi-karti-error-list">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="span12">
                        <div style="margin-bottom: 0;" class="alert alert-info">
                            <strong>@babonline.Info! </strong>@babonline.Credit_Card_Info
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <div class="modal-footer">
        <a id="kk-odeme-cancel" href="#" class="btn" data-dismiss="modal" aria-hidden="true">@babonline.Cancel</a>
        <a id="kk-odeme-btn" href="#" class="btn btn-danger" data-loading-text="@babonline.Message_CreatingPolicy">@babonline.IApprove</a>
    </div>
</div>

<style>
    .radio, .checkbox {
        padding-left: 17px !important;
    }

    .controls .inline {
        margin-top: 0;
    }
</style>
