@using Neosinerji.BABOnlineTP.Web.Content.Lang
@model Neosinerji.BABOnlineTP.Web.Areas.TVM.Models.ProfilModel

<script>
    $(document).ready(function () {
        $("#fotograf-guncelle-btn").click(function () {

            $("#fotograf-guncelle-btn").button("loading");
        });
        $("#fotograf-guncelle-btn").button("reset");
    });
</script>


<div id="fotograf-modal" class="modal hide fade">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3>@babonline.Photo_Add</h3>
    </div>
    <div class="modal-body">
        <form id="fotograf-guncelle-form" class="form-horizontal" name="fotograf-guncelle-form" enctype="multipart/form-data">
            @{ Html.EnableClientValidation(true); }
            @Html.HiddenFor(m => m.KullaniciKodu)
            @Html.ValidationSummary(true, babonline.Message_GenericErrorHeader)
            @Html.AntiForgeryToken()
            <div id="fileupload" class="fileupload fileupload-new" data-provides="fileupload" style="margin-left: auto; width: 210px; margin-right: auto;">
                <div class="fileupload-preview thumbnail" style="width: 200px; height: 150px;"></div>
                <div>
                    <span class="btn btn-file"><span class="fileupload-new">@babonline.ChoosePhoto</span><span class="fileupload-exists">@babonline.Change</span><input type="file" id="file" name="file" /></span>
                    <a href="#" class="btn fileupload-exists" data-dismiss="fileupload">@babonline.Remove</a>
                </div>
            </div>

        </form>
    </div>
    <div class="modal-footer">
        <a href="#" class="btn" data-dismiss="modal" aria-hidden="true">@babonline.Cancel</a>
        <a href="#" class="btn btn-success" data-loading-text="@babonline.Message_Loading" id="fotograf-guncelle-btn">@babonline.Update</a>
    </div>
</div>
