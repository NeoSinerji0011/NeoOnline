@using Neosinerji.BABOnlineTP.Web.Content.Lang
@using Neosinerji.BABOnlineTP.Web.Areas.Manage.Models
@model TVMPDenemeEkranModel
@{
    ViewBag.Title = "TVMDenemeSurum";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}


@section HorizontalMenu
{
    <ul class="nav">
        <li class="active">
            <a href="#">@babonline.SalesCahannelTrialVersion<span class="selected"></span></a>
        </li>
        <li>
            <span class="hor-menu-search-form-toggler">&nbsp;</span>
            <div class="search-form hidden-phone hidden-tablet">
                <form class="form-search">
                    <div class="input-append">
                        <input type="text" placeholder="@babonline.Search2" class="m-wrap">
                        <button type="button" class="btn"></button>
                    </div>
                </form>
            </div>
        </li>
    </ul>
}

@section PageHeader
{

}

@section PageScripts
{

}

<div class="portlet box light-grey " style="margin-top: 24px;">
    <div class="portlet-title">
        <div class="caption"><i class="icon-reorder"></i>@babonline.AddTVM</div>
    </div>
    <div class="portlet-body form">
        @using (Html.BeginForm("TVMDenemeSurum", "TVM", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            Html.EnableClientValidation(true);
            @Html.ValidationSummary(true, @babonline.Message_GenericErrorHeader)
            @Html.AntiForgeryToken()

            <h3 class="form-section">
                @babonline.General_Information
            <h2 style="color: red" class="form-section">@ViewBag.mesaj</h2>
        </h3>

            <div class="row-fluid">
                <div class="span6">
                    <div class="control-group">
                        <label class="control-label">@babonline.TVM_Title<span class="required">*</span></label>
                        <div class="controls">
                            @Html.TextBoxFor(m => m.TvmUnvan, new { maxlength = 50, style = "width:100%;", placeholder = babonline.TVM_Title })
                            @Html.ValidationMessageFor(m => m.TvmUnvan)
                        </div>
                    </div>
                </div>
            </div>

            <div class="row-fluid">
                <div class="span6">
                    <div class="control-group">
                        <label class="control-label">@babonline.TVM_RecordNo  <span class="required">*</span></label>
                        <div class="controls">
                            @Html.TextBoxFor(m => m.LevhaNo, new { maxlength = 50, style = "width:60%", placeholder = babonline.TVM_RecordNo }, babonline.TVM_RecordNo_Tooltip)
                            @Html.ValidationMessageFor(m => m.LevhaNo)
                        </div>
                    </div>
                </div>
            </div>


            <h3 class="form-section">@babonline.Contact_Info</h3>

            <div class="row-fluid">
                <div class="span6">
                    <div class="control-group">
                        <label class="control-label">@babonline.Email_Adress</label>
                        <div class="controls">
                            @Html.TextBoxFor(m => m.Email, new { style = "width:60%", placeholder = babonline.Email_Adress })
                            @Html.ValidationMessageFor(m => m.Email)
                        </div>
                    </div>
                </div>
                <div class="span6">
                </div>
            </div>
            <div class="row-fluid">
                <div class="span6">
                    <div class="control-group">
                        <label class="control-label">@babonline.TechnicalPersonelNameSurname</label>
                        <div class="controls">
                            @Html.TextBoxFor(m => m.TeknikPersonelAd, new { style = "width:60%" })
                            @Html.ValidationMessageFor(m => m.TeknikPersonelAd)
                        </div>
                    </div>
                </div>
                <div class="span6">
                </div>
            </div>

            <div class="form-actions">
                <button class="btn btn-success"><i class="icon-ok">&nbsp;</i>@babonline.Save</button>
                <a class="btn" href="~/Manage/TVM/Liste">@babonline.Cancel</a>
            </div>
        }
    </div>
</div>


