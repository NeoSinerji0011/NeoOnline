@using Neosinerji.BABOnlineTP.Web.Content.Lang;
@model Neosinerji.BABOnlineTP.Web.Areas.TVM.Models.KullaniciDuyuruDetayModel

<div id="duyuru-detay-modal" class="modal hide fade">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
        <h3>@babonline.AnnouncementDetails</h3>
    </div>
    <div class="modal-body">
        <form class="form-horizontal">
            <div class="control-group">
                <label class="control-label">@babonline.Topic </label>
                <div class="controls">
                    <label>@Model.Konu </label>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">@babonline.Description </label>
                <div class="controls">
                    <label>@Html.Raw(Model.Aciklama) </label>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">@babonline.StartDate</label>
                <div class="controls">
                    <label>@Model.BaslamaTarihi</label>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">@babonline.EndDate</label>
                <div class="controls">
                    <label>@Model.BitisTarihi</label>
                </div>
            </div>
        </form>
    </div>
    <div class="modal-footer">
        <a href="#" class="btn" data-dismiss="modal" aria-hidden="true">@babonline.Cancel</a>
    </div>
</div>
