@using Neosinerji.BABOnlineTP.Web.Content.Lang
@using Neosinerji.BABOnlineTP.Business
@using Neosinerji.BABOnlineTP.Business.Common
@model KimlikGuncelleModel


<div id="kimlikGuncelle-modal" class="modal hide fade">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3>Kimlik Bilgisi Güncelle</h3>
    </div>
    <div class="modal-body">
        <form id="kimlik-guncelle-form" class="form-horizontal">
            @{ Html.EnableClientValidation(true); }
            @Html.HiddenFor(m => m.policeId)
            @Html.AntiForgeryToken()
            <div class="control-group">
                <label class="control-label">TCKN / VKN / YKN<span class="required">*</span></label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.kimlikNo, new { maxlength = 15, autocompletetype = "disabled" })
                    @Html.ValidationMessageFor(m => m.kimlikNo)
                </div>
            </div>
        </form>
    </div>
    <div class="modal-footer">
        <a href="#" class="btn" data-dismiss="modal" aria-hidden="true">@babonline.Cancel</a>
        <a href="javascript:void(0)" class="btn btn-info" id="kimlik-guncelle-btn">@babonline.Update</a>
    </div>
</div>