@using Neosinerji.BABOnlineTP.Web.Content.Lang
@using Neosinerji.BABOnlineTP.Web.Areas.Musteri.Models
@model DokumanListModel

<table id="dokumanlar-table" class="table table-striped table-bordered table-hover dataTable data-table">
    <thead>
        <tr>
            <th>@babonline.Document_Type</th>
            <th>@babonline.Date</th>
            <th>@babonline.Added_Records_User </th>
            <th>@babonline.File_Name</th>

            @if (Model.sayfaAdi == "guncelle")
            {
                <th style="width: 10%;">&nbsp;</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.DokumanTuru</td>
                <td>@item.KayitTarihi</td>
                <td>@item.TvmPersonelAdi</td>
                <td>@item.DosyaAdi</td>
                @if (Model.sayfaAdi == "guncelle")
                {
                    <td>
                        <div class="btn-group">
                            <a href="#" onclick="window.open('@item.DokumanURL');return false;" id="indir" class="btn btn-mini btn-success">@babonline.Download</a>
                            <a href="javascript:void(0)" musteri-kodu="@item.MusteriKodu" sira-no="@item.SiraNo" class="btn btn-mini btn-danger delete-dokuman">@babonline.Delete</a>
                        </div>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
