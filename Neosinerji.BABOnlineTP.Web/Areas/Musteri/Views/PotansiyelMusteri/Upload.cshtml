@using Neosinerji.BABOnlineTP.Web.Content.Lang
@model Neosinerji.BABOnlineTP.Web.Areas.PotansiyelMusteri.Models.PotansiyelDokumanModel

@section PageScripts
{
    <script>
        $(document).ready(function () {
            $("#upload").live("click", function () {
            });
        });
    </script>
}

<div class="span12">
    <div class="box corner-all">
        <div class="box-header grd-white color-silver-dark corner-top">
            <span>@babonline.Document_Add</span>
        </div>
        <div class="box-body">
            @using (Html.BeginForm("Upload", "Musteri", FormMethod.Post, new { id = "dosya", @class = "form-horizontal", enctype = "multipart/form-data" }))
            {
                { Html.EnableClientValidation(true); }
                @Html.HiddenFor(m => m.PotansiyelMusteriKodu)
                @Html.Raw(Html.Raw(Html.ValidationSummary(true, babonline.Message_GenericErrorHeader)))
                @Html.Raw(ViewBag.HtmlOutput)               
                <input type="button" text="Değiştir" style="display: none;" />
                <div class="row-fluid">
                    <div class="span12">
                        <div class="control-group">
                            <label class="control-label">@babonline.Document_Type</label>
                            <div class="controls">
                                @Html.TextBoxFor(m => m.DokumanTuru, new { maxlength = 50, autocompletetype = "disabled" })
                                @Html.ValidationMessageFor(m => m.DokumanTuru)
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">@babonline.File</label>
                            <div class="controls">
                                <input type="file" id="file" name="file" style="width: 400px;" />
                            </div>
                        </div>
                        <div class="form-actions">
                            <button class="btn btn-success">@babonline.Save</button>
                            <a class="btn" href="~/Manage/Musteri/Liste">@babonline.Cancel</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
