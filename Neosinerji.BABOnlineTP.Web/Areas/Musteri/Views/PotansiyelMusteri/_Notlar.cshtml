@using Neosinerji.BABOnlineTP.Web.Content.Lang
@using Neosinerji.BABOnlineTP.Web.Areas.PotansiyelMusteri.Models
@model  PotansiyelNotListModel

<table id="notlar-table" class="table table-striped table-bordered table-hover dataTable data-table">
    <thead>
        <tr>
            <th>@babonline.Topic</th>
            <th>@babonline.Date</th>
            <th>@babonline.Added_Records_User</th>
            <th>@babonline.Node</th>
            @if (Model.sayfaAdi == "guncelle")
            {
                <th style="width: 30px;">&nbsp;</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.Konu</td>
                <td>@item.KayitTarihi.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@item.TvmPersonelAdi</td>
                <td>@item.NotAciklamasi</td>

                @if (Model.sayfaAdi == "guncelle")
                {  
                    <td>
                        <div class="btn-group">
                            <a href="javascript:void(0)" musteri-kodu="@item.PotansiyelMusteriKodu" sira-no="@item.SiraNo" class="btn btn-mini btn-danger delete-not">@babonline.Delete</a>
                        </div>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
