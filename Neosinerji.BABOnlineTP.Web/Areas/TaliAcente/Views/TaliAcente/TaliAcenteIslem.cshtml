                                        <div class="control-group">
                                            <label class="control-label">@babonline.Endorsement <span class="required">*</span></label>
                                            <div class="controls">
                                                @Html.TextBoxFor(m => m.EkNo, Model.EkNo, new { @class = "onlynumbers", required = "required" })
