@using Neosinerji.BABOnlineTP.Web.Content.Lang
@model Neosinerji.BABOnlineTP.Web.Areas.Manage.Models.VergiModel

@section HorizontalMenu
{
    <ul class="nav">
        <li>
            <a href="~/Manage/Vergi/Liste">@babonline.Tax_Search<span></span></a>
        </li>
        <li>
            <a href="~/Manage/Vergi/Detay/@Model.VergiKodu">Detay<span></span></a>
        </li>
        <li class="active">
            <a href="#">@babonline.Update<span class="selected"></span></a>
        </li>
        <li>
            <span class="hor-menu-search-form-toggler">&nbsp;</span>
            <div class="search-form hidden-phone hidden-tablet">
                <form class="form-search">
                    <div class="input-append">
                        <input type="text" placeholder="@babonline.Search2" class="m-wrap">
                        <button type="button" class="btn"></button>
                    </div>
                </form>
            </div>
        </li>
    </ul>
}

@section PageHeader
{

}
<div class="portlet box light-grey" style="margin-top: 24px;">
    <div class="portlet-title">
        <div class="caption"><i class="icon-reorder"></i>@babonline.Tax_Info</div>
    </div>
    <div class="portlet-body form">
        @using (Html.BeginForm("Guncelle", "Vergi", FormMethod.Post, new { @class = "form-horizontal" }))
        {

            @Html.HiddenFor(s => s.VergiKodu)
            Html.EnableClientValidation(true);
            @Html.ValidationSummary()
            @Html.AntiForgeryToken()

            <div class="control-group">
                <label class="control-label">@babonline.Tax_Code</label>
                <div class="controls">
                    <label class="control" id="BransAdi">@Model.VergiKodu</label>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">@babonline.Tax_Name</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.VergiAdi, new { maxlength = 50, autocompletetype = "disabled" })
                    @Html.ValidationMessageFor(m => m.VergiAdi)
                </div>
            </div>       
            <div class="control-group">
                <label class="control-label"></label>
                <div class="controls">
                    <button class="btn btn-success">@babonline.Edit</button>
                    <a class="btn" href="~/Manage/Vergi/Detay/@Model.VergiKodu">@babonline.Cancel</a>
                </div>
            </div>  
        }
    </div>
</div>




