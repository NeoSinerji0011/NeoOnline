@using Neosinerji.BABOnlineTP.Web.Content.Lang
@using Neosinerji.BABOnlineTP.Web.Areas.Manage.Models
@model TVMNotlarListModel

<script>
    $(document).ready(function () {
        var notTable;
        function notTableSet() {
            notTable = $('#notlar-table').dataTable({
                "bPaginate": true,
                "bLengthChange": false,
                "iDisplayLength": 5,
                "bFilter": false,
                "bInfo": false,
                "bAutoWidth": false,
                "sPaginationType": "full_numbers",
                "sPaginationType": "bootstrap"
            });
        }

        notTableSet();
    });
</script>

<table id="notlar-table" class="table table-bordered table-striped responsive data-table">
    <thead>
        <tr>
            <th style="width: 150px;">@babonline.Order</th>
            <th>@babonline.Topic</th>
            <th style="width: 100px;">@babonline.Add_Date</th>
            <th style="width: 50px;">&nbsp;</th>
            <th style="width: 40px;">&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td style="text-align: center; width: 150px;">@item.SiraNo</td>
                <td>@item.KonuAdi</td>
                <td>@item.EklemeTarihi.ToShortDateString()</td>
                <td style="text-align: center;">
                    <a href="javascript:void(0)" not-kodu="@item.SiraNo" tvm-kodu="@item.TVMKodu" class="btn btn-mini btn-info edit-not">@babonline.Read</a>
                </td>
                <td style="text-align: center;">
                    <a href="javascript:void(0)" not-kodu="@item.SiraNo" tvm-kodu="@item.TVMKodu" class="btn btn-mini btn-danger delete-not">@babonline.Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
