@section PageScripts
{
    <link href="~/Content/css/bootstap-multiselect.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/dataTable")
    <script>

        $(document).ready(function () {

            $("#search").click(function () {


            });
        });
    </script>
