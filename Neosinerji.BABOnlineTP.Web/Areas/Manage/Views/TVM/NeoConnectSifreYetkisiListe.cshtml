<div class="row-fluid">
    <div class="span12">
        <div class="portlet box light-grey" style="margin-top: 20px;">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-reorder"></i>
                    <span class="hidden-480">NeoConnect Şifre Yetki Listesi</span>
                </div>
                @* @if (eklemeYetkisi)
                    {
                        <div class="actions">
                            <a href="/Manage/TVM/Ekle" class="btn yellow"><i class="icon-pencil">&nbsp;</i>@babonline.TVM_Add</a>
                        </div>
                    }*@
            </div>
            <div class="portlet-body form">
                @using (Html.BeginForm("NeoConnectSifreYetkisiListe", "TVM", FormMethod.Post, new { @class = "form-horizontal", id = "formPoliceListe", enctype = "multipart/form-data" }))
                {
                    <div class="row-fluid" style="padding-top: 10px;">
                        <div class="span6">
                            <div class="control-group">
                                <label class="control-label">@babonline.TVM</label>
                                <div class="controls">
                                    @Html.DropDownListFor(s => s.TVMKodu, Model.TVMKodlari, new { required = "required" })
                                    @Html.ValidationMessageFor(m => m.TVMKodu)
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-actions">
                        <a href="/Manage/TVM/NeoConnectSifreYetkisiListe" class="btn ligth-grey">@babonline.Clear</a>
                        <input type="submit" id="searchl" class="btn btn-success" data-loading-text="@babonline.QueryIndicator" value="@babonline.Search" />
                    </div>

                    <div class="row-fluid" style="margin-top: 20px;">
                        <div class="span12">
                            <div class="portlet-body">
                                <table class="table table-striped table-bordered table-hover dataTable data-table">
                                    <thead>
                                        <tr>
                                            <th>@babonline.TVM</th>
                                            <th>@babonline.TVM Ünvanı</th>
                                            <th style="width: 20%;">@babonline.TUM_Title</th>
                                            <th>Grup Adı</th>
                                            <th>Kullanıcı @babonline.TVMUser_Name</th>
                                            <th>@babonline.Password</th>
                                            <th>Acente Kodu</th>
                                            <th>Proxy (Ip Adresi / Port)</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 0; i < Model.tableList.Count; i++)
                                        {
                                            <tr>
                                                <td>@Model.tableList[i].AltTVMKodu </td>
                                                <td>@Model.tableList[i].AltTVMUnvani</td>
                                                <td>@Model.tableList[i].SirketAdi</td>
                                                <td>@Model.tableList[i].GrupAdi</td>
                                                <td>@Model.tableList[i].KullaniciAdi</td>
                                                <td>@Model.tableList[i].Sifre</td>
                                                <td>@Model.tableList[i].AcenteKodu</td>
                                                <td>@Model.tableList[i].ProxyIpPort</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
