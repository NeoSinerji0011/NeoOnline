@using Neosinerji.BABOnlineTP.Web.Content.Lang
@model Neosinerji.BABOnlineTP.Web.Areas.Manage.Models.TVMBolgeleriModel


<div id="bolge-modal" class="modal hide fade">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        @if (!string.IsNullOrEmpty(Model.BolgeAdi))
        {
            <h3>@babonline.Edit</h3>
        }
        else
        {
            <h3>@babonline.TVMRegion_Add</h3>
        }
    </div>
    <div class="modal-body">
        <div class="validation-summary-errors" id="bolge-error" style="display: none;">
            <span>@babonline.Message_GenericErrorHeader</span>
            <ul>
                <li id="bolge-error-message">@babonline.Error</li>
            </ul>
        </div>
        <form id="bolge-ekle-form" class="form-horizontal">
            @{ Html.EnableClientValidation(true); }
            @Html.HiddenFor(m => m.TVMKodu)
            @Html.HiddenFor(m => m.TVMBolgeKodu)
            @Html.ValidationSummary(true, babonline.Message_GenericErrorHeader)
            @Html.AntiForgeryToken()

            <div class="control-group">
                <label class="control-label">@babonline.TVM_Code</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.TVMKodu, new { autocompletetype = "disabled", disabled = "true" })
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">@babonline.TVMDepartment_RegionName<span class="required">*</span></label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.BolgeAdi, new { maxlength = 50, autocompletetype = "disabled" })
                    @Html.ValidationMessageFor(m => m.BolgeAdi)
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">@babonline.Comment</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.Aciklama, new { maxlength = 100, autocompletetype = "disabled" })
                    @Html.ValidationMessageFor(m => m.Aciklama)
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">@babonline.Status</label>
                <div class="controls" style="margin-left: 200px;">
                    @Html.RadioButtonListFor(m => m.Durum, Model.Durumlar)
                </div>
            </div>
        </form>
    </div>
    <div class="modal-footer">
        <a href="#" class="btn" data-dismiss="modal" aria-hidden="true">@babonline.Cancel</a>
        @if (!string.IsNullOrEmpty(Model.BolgeAdi))
        {
            <a href="#" class="btn btn-info" id="bolge-guncelle-btn">@babonline.Update</a>
        }
        else
        {
            <a href="#" class="btn btn-success" id="bolge-ekle-btn"><i class="icon-ok">&nbsp;</i>@babonline.Save</a>
        }
    </div>
</div>
