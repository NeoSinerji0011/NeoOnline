@using Neosinerji.BABOnlineTP.Web.Content.Lang

<script type="text/javascript">
    $("#delete-confirm-btn").live("click", function () {
        $("#urunsil-progress").show();
    });

</script>


<div id="delete-confirmation" class="modal hide fade">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
        <h3>@babonline.Message_Deleting_Records</h3>
    </div>
    <div class="modal-body">
        <p>
            @babonline.Message_DeleteConfirmation
        </p>
        <div id="urunsil-progress" class="span12" style="padding-bottom: 20px; display: none;">
            <div style="margin: 20px auto; width: 500px; text-align: center;">
                <h4>Lütfen bekleyin, kayıt siliniyor...</h4>
            </div>
            <div style="margin: 20px auto; width: 500px; text-align: center;">
                <img src="/Content/img/loading9.gif" width="32" height="32" title="Lütfen bekleyin, kayıt siliniyor." alt="Lütfen bekleyin, kayıt siliniyor.">
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <a href="#" class="btn" data-dismiss="modal" aria-hidden="true">@babonline.Cancel</a>
        <a id="delete-confirm-btn" href="#" class="btn btn-danger" data-loading-text="Siliniyor...">@babonline.Delete</a>
    </div>
</div>
