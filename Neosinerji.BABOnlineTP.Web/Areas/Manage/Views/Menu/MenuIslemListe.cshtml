@using Neosinerji.BABOnlineTP.Web.Content.Lang
@model Neosinerji.BABOnlineTP.Web.Areas.Manage.Models.MenuIslemListModel

@section HorizontalMenu
{
    <ul class="nav">
        <li><a href="/Manage/Menu/Liste">@babonline.Menus<span></span></a></li>
        <li class="active"><a href="#">@babonline.MenuOperation_Search<span class="selected"></span></a></li>
        <li><a href="/Manage/Menu/MenuIslemEkle">@babonline.MenuOperation_Add<span></span></a></li>
        <li>
            <span class="hor-menu-search-form-toggler">&nbsp;</span>
            <div class="search-form hidden-phone hidden-tablet">
                <form class="form-search">
                    <div class="input-append">
                        <input type="text" placeholder="@babonline.Search2" class="m-wrap">
                        <button type="button" class="btn"></button>
                    </div>
                </form>
            </div>
        </li>
    </ul>
}

@section PageHeader
{

}

@section PageScripts
{
    @Scripts.Render("~/bundles/dataTable")
    <script>
        $(document).ready(function () {
            $('.data-table').dataTable({
                "bPaginate": true,
                "bLengthChange": true,
                "bFilter": true,
                "bSort": true,
                "bInfo": true,
                "bProcessing": true,
                "sPaginationType": "full_numbers",
                "sPaginationType": "bootstrap"
            });
            $("#menu-Menu").addClass("active");
        });
        $("[rel=tooltip]").tooltip();
    </script>
}

<div class="row-fluid">
    <div class="span12">
        <div class="portlet box light-grey " style="margin-top: 24px;">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-reorder"></i>
                    <span class="hidden-480">@babonline.MenuOperation_List</span>
                </div>
                <div class="actions">
                    <a href="/Manage/Menu/MenuIslemEkle" class="btn yellow"><i class="icon-pencil">&nbsp;</i>@babonline.MenuOperation_Add</a>
                </div>
            </div>
            <div class="portlet-body ">
                <form class="form-horizontal">
                    <table class="table table-striped table-bordered table-hover dataTable data-table">
                        <thead>
                            <tr>
                                <th style="width: 100px;">@babonline.Operation_Code</th>
                                <th>URL</th>
                                <th style="width: 60px;">&nbsp;</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td>@item.IslemKodu</td>
                                    <td>@Html.ActionLink(@item.URL, "MenuIslemDetay", new { Id = item.IslemKodu })</td>
                                    <td>
                                        <div class="btn-group">
                                            <a href="/Manage/Menu/MenuIslemDetay/@item.IslemKodu" class="btn mini" rel="tooltip" data-placement="top" data-original-title="@babonline.Detail"><i class="icon-info-sign"></i></a>
                                            <a href="/Manage/Menu/MenuIslemGuncelle/@item.IslemKodu" class="btn mini" rel="tooltip" data-placement="top" data-original-title="@babonline.Edit"><i class="icon-edit"></i></a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </form>
            </div>
        </div>
    </div>
</div>
