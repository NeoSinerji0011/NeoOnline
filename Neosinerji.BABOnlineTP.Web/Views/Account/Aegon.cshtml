@{
    ViewBag.Title = "Aegon";
    Layout = null;
}

@model Neosinerji.BABOnlineTP.Web.Models.LoginModelAEGON

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>NeoOnline</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta content="neosinerji" name="author" />
    <link rel="shortcut icon" href="@Url.Content("~/favicon.ico")" />

    <!-- BEGIN CORE PLUGINS -->
    <script src="~/Content/js/jquery-1.10.1.min.js" type="text/javascript"></script>
    <script src="~/Content/js/jquery-migrate-1.2.1.min.js" type="text/javascript"></script>
    <!-- END CORE PLUGINS -->

    <style type="text/css">
        #gr_main_holder {
            background-image: url("/Content/img/Aegon/gr_bg.jpg");
            background-repeat: no-repeat;
            border-bottom: 1px solid #2D72A7;
            border-top: 1px solid #000000;
            height: 540px;
            margin: 50px auto auto;
            width: 960px;
        }

        #gr_bottom {
            font-family: Arial,Helvetica,sans-serif;
            font-size: 9px;
            font-weight: bold;
            margin: auto;
            padding-top: 3px;
            width: 960px;
        }

        #gr_logo {
            margin-top: 23px;
        }

        #gr_login_holder {
            background-image: url("/Content/img/Aegon/login_bg.jpg");
            background-position: right top;
            background-repeat: no-repeat;
            float: left;
            height: 280px;
            margin-left: 10px;
            margin-top: 115px;
            width: 450px;
        }

        #gr_message_area {
            float: left;
            height: 280px;
            margin-top: 120px;
            width: 350px;
        }

        #gr_message_header {
            color: #379AD0;
            font-family: Arial,Helvetica,sans-serif;
            font-size: 14px;
            font-weight: bold;
            margin: 60px 10px 10px 30px;
        }

        #gr_message {
            font-family: Arial,Helvetica,sans-serif;
            font-size: 12px;
            margin: 10px 10px 10px 30px;
        }



        #gr_user {
            font-family: Arial,Helvetica,sans-serif;
            font-size: 11px;
            margin-top: 75px;
            text-align: right;
        }

            #gr_user input {
                margin-right: 90px;
                margin-top: 2px;
                width: 220px;
            }

        #gr_pass {
            font-family: Arial,Helvetica,sans-serif;
            font-size: 11px;
            text-align: right;
        }

            #gr_pass input {
                margin-right: 90px;
                margin-top: 2px;
                width: 220px;
            }

        #gr_but {
            text-align: right;
        }

            #gr_but input {
                float: right;
                margin-right: 201px;
                margin-top: 2px;
            }

        #reminder {
            float: left;
            font-family: Arial,Helvetica,sans-serif;
            font-size: 12px;
            margin-top: 60px;
            width: 400px;
        }

            #reminder a {
                color: #000000;
                font-family: Arial,Helvetica,sans-serif;
                font-size: 12px;
                text-decoration: none;
            }

                #reminder a:hover {
                    color: #379AD0;
                    font-family: Arial,Helvetica,sans-serif;
                    font-size: 12px;
                }

        #forget1 {
            border-bottom: 1px solid #379AD0;
            float: left;
            height: 18px;
            margin-left: 5px;
            width: 100px;
        }

        #forget2 {
            border-bottom: 1px solid #379AD0;
            float: left;
            height: 18px;
            margin-left: 10px;
            width: 160px;
        }

        #note {
            background-image: url("/Content/img/Aegon/unl.gif");
            background-repeat: no-repeat;
            border-top: 1px solid #D3D3D3;
            height: 50px;
            margin-left: 5px;
            padding-left: 25px;
            padding-top: 10px;
        }

        .arrow {
            border-bottom: 1px solid #379AD0;
            float: left;
            height: 18px;
            width: 6px;
        }

        TABLE {
            background-color: #FFFFFF;
            border-collapse: collapse;
            border-color: #000000;
            border-right: 0 solid #000000;
            border-style: solid;
            border-width: 0;
            float: left;
            font-size: 100%;
            height: 21px;
            display: block;
        }

            TABLE .alert_t {
                border-color: #B7217F;
                border-right: 0 solid #B7217F;
                border-style: solid;
                border-width: 0;
                font-size: 100%;
                width: 100%;
            }

            TABLE TD {
                border-bottom: 0 solid #000000;
                padding: 0 10px;
                vertical-align: top;
            }

                TABLE TD .alert_td {
                    border-bottom: 0 solid #000000;
                    padding: 3px 10px 4px;
                    vertical-align: top;
                }

        .alert {
            color: #379AD0;
            font-family: arial;
            font-size: 12px;
            font-weight: bold;
            outline: medium none;
            text-decoration: none;
        }
    </style>

</head>
<body>
    <div id="gr_main_holder">
        <div id="gr_logo">
            <img src="~/Content/img/Aegon/aegonlogo.jpg" width="159" height="77">
        </div>
        <div id="gr_login_holder">
            <table cellpadding="10" cellspacing="0" width="250" align="center" class="alert_t">
                <tbody>
                    <tr>
                        <td class="alert_td"><span class="alert">&nbsp; @Html.ValidationSummary()</span></td>
                    </tr>
                </tbody>
            </table>
            <form name="logon" action="~/Account/Aegon" method="POST" id="loginform" autocomplete="off">
                <div id="gr_login">
                    <div id="gr_user">
                        Partaj:
                        @Html.TextBoxFor(s => s.AcenteNo, new { type = "text", autocomplete = "off" })
                    </div>
                    <div id="gr_pass">
                        Şifre:
                        @Html.TextBoxFor(s => s.Password, new { type = "password", autocomplete = "off" })
                    </div>
                    <div id="gr_but">
                        <input name="submit" type="image" src="~/Content/img/Aegon/enter.jpg">
                    </div>
                </div>
            </form>
            <br>
            <br>

            <div id="reminder">
                <div id="forget1"><a href="#">Şifremi Unuttum</a></div>
                <div class="arrow">
                    <img src="~/Content/img/Aegon/arrow.gif" width="6" height="13">
                </div>
                <br style="clear: both">
                <br>
                <div id="note">
                    Güvenliğiniz için partaj numaranızı ve şifrenizi gizli tutun. 3. Şahıslarla paylaşmayın.
                </div>
            </div>
        </div>
        <div id="gr_message_area">

            <div id="gr_message_header"></div>
            <div id="gr_message" style="padding-top: 20px;">
            </div>
        </div>
    </div>
    <div id="gr_bottom">&copy;2020 Neosinerji / NeoOnline</div>
</body>
</html>
