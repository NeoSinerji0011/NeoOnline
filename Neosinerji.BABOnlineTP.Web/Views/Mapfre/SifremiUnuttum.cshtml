@using Neosinerji.BABOnlineTP.Web.Content.Lang
@model Neosinerji.BABOnlineTP.Web.Models.MapfreRecoverPassword

@{
    Layout = "~/Views/Shared/_Mapfre.cshtml";
}

<style>
    .sifremi-unuttum {
        color: white;
        font-size: 18px;
        font-weight: bold;
        height: 41px;
        padding-left: 22px;
        padding-top: 10px;
        font-family: Arial;
    }
</style>

<link href="~/Content/css/mapfre-login.css" rel="stylesheet" />
@using (Html.BeginForm("SifremiUnuttum", "Mapfre", FormMethod.Post, new { id = "form1" }))
{
    { Html.EnableClientValidation(false); }
    <div class="custom-content">
        <div class="left-img"></div>
        <div class="login-hub-center">
            <div style="padding-bottom:20px;">
                Lütfen TRONWEB kullanıcı kodunuzu giriniz.
            </div>
            <div class="login-hub-top">
                <div class="login-white-content-sifremi-unuttum" style="height: 167px !important;">
                    <div class="sifremi-unuttum">
                        Şifremi Unuttum     
                    </div>
                    <div class="textbox-group">
                        @Html.TextBoxFor(s => s.KullaniciKodu, new { @class = "text-box", placeholder = "Kullanıcı Kodu" })
                        @Html.ValidationMessageFor(s => s.KullaniciKodu)
                    </div>
                    <div>
                        <input type="submit" id="btn-ok" class="tamam-button-div" style="margin-left: 0px; margin-right: 27px; float: right; margin-top: 3px;" value="Tamam" />
                    </div>
                </div>
            </div>
            <div style="width: 281px; height: 170px;">
            </div>
            <div class="error-div">
                @Html.ValidationSummary(true)
            </div>
            <div class="error-div">
                @if (!String.IsNullOrEmpty(ViewBag.Message))
                {
                    <div class="alert alert-success">
                        @ViewBag.Message
                    </div>
                }
            </div>
        </div>
    </div>
}
